{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "lib": ["es2020", "dom"],
        "moduleResolution": "node",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "declaration": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "build",
    },
    "include": [
        "src/**/*.ts",
    ]
}